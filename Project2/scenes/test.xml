<yas>
  <scene root="root" axis_length="5" />

  <!--Views-->
  <views default="living room" >
    <perspective id="living room" near="0.1" far="50" angle="23">
      <from x="3.5" y="7" z="20" />
      <to x="3.5" y="1" z="0" />
    </perspective>
  </views>

  <!--Ambient-->

  <ambient>
    <ambient r="0.2" g="0.2" b="0.2" a="0.2" />
    <background r="0.05" g="0.05" b="0.05" a="1" />
  </ambient>

  <!--Lights-->

  <lights>
    <omni id="living room 1" enabled="1">
      <location x="0" y="3" z="0" w="1" />
      <ambient r="0.2" g="0.2" b="0.2" a="1" />
      <diffuse r="0.6" g="0.6" b="0.6" a="1" />
      <specular r="0.3" g="0.3" b="0.3" a="1" />
    </omni>
  </lights>

  <!--Textures-->

  <textures>
    <texture id="flanders" file="./scenes/images/flanders.jpg" />
  </textures>

  <!--Materials-->

  <materials>
    <material id="default" shininess = "1" >
      <emission r="0" g="0" b="0" a="1" />
      <ambient r="0" g="0" b="0" a="1" />
      <diffuse r="1" g="1" b="1" a="1" />
      <specular r="0.1" g="0.1" b="0.1" a="1" />
    </material>
  </materials>

  <!--Transformations-->

  <transformations>
      <transformation id="transformation1">
        <translate x="1" y="0" z="3" />
        <rotate axis="y" angle="10" />
        <scale x="4" y="5" z="2" />
      </transformation>
  </transformations>

  <!--Animations-->
  <animations>
  </animations>

  <!--Primitives-->

  <primitives>
    <primitive id="patch">
      <patch npointsU="1" npointsV="2" npartsU="3" npartsV="4">
        <controlpoint xx="10" yy="20" zz="30"/>
        <controlpoint xx="40" yy="50" zz="60"/>
      </patch>
    </primitive>

    <primitive id="vehicle">
      <vehicle/>
    </primitive>

    <primitive id="cylinder2">
      <cylinder2 base="0.55" top="0.5" height="1" slices="2" stacks="20" />
    </primitive>

    <primitive id="terrain">
      <terrain idtexture="flanders" idheightmap="flanders" parts="1" heightscale="20"/>
    </primitive>

    <primitive id="water">
      <water idtexture="flanders" idwavemap="flanders" parts="1" heightscale="10" texscale="20"/>
    </primitive>

    <primitive id="rectangle">
      <plane npartsU="1" npartsV="1"/>
    </primitive>
  </primitives >

  <!--Components-->

  <components>

    <!--Root node-->

    <component id="root">
      <transformation>
      </transformation>
      <materials>
        <material id="default" />
      </materials>
      <texture id="flanders" length_s="1" length_t="1" />
      <children>
        <primitiveref id="rectangle" />
      </children>
    </component>
  </components>
</yas>

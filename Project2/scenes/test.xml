<yas>
  <scene root="root" axis_length="5" />

  <!--Views-->
  <views default="living room" >
    <perspective id="living room" near="0.1" far="200" angle="23">
      <from x="20" y="10" z="15" />
      <to x="0" y="1" z="0" />
    </perspective>
  </views>

  <!--Ambient-->

  <ambient>
    <ambient r="0.2" g="0.2" b="0.2" a="0.2" />
    <background r="0.05" g="0.05" b="0.05" a="1" />
  </ambient>

  <!--Lights-->

  <lights>
    <omni id="1" enabled="1">
      <location x="0" y="5" z="0" w="1" />
      <ambient r="0" g="0" b="0" a="1" />
      <diffuse r="0.3" g="0.3" b="0.3" a="1" />
      <specular r="0.3" g="0.3" b="0.3" a="1" />
    </omni>

    <omni id="2" enabled="1">
      <location x="0" y="5" z="5" w="1" />
      <ambient r="0" g="0" b="0" a="1" />
      <diffuse r="0.3" g="0.3" b="0.3" a="1" />
      <specular r="0.3" g="0.3" b="0.3" a="1" />
    </omni>

    <omni id="3" enabled="1">
      <location x="5" y="5" z="5" w="1" />
      <ambient r="0" g="0" b="0" a="1" />
      <diffuse r="0.3" g="0.3" b="0.3" a="1" />
      <specular r="0.3" g="0.3" b="0.3" a="1" />
    </omni>

    <omni id="4" enabled="1">
      <location x="5" y="5" z="0" w="1" />
      <ambient r="0" g="0" b="0" a="1" />
      <diffuse r="0.3" g="0.3" b="0.3" a="1" />
      <specular r="0.3" g="0.3" b="0.3" a="1" />
    </omni>

    <omni id="5" enabled="1">
      <location x="0" y="0" z="5" w="1" />
      <ambient r="0" g="0" b="0" a="1" />
      <diffuse r="0.3" g="0.3" b="0.3" a="1" />
      <specular r="0.3" g="0.3" b="0.3" a="1" />
    </omni>

    <omni id="6" enabled="1">
      <location x="5" y="0" z="5" w="1" />
      <ambient r="0" g="0" b="0" a="1" />
      <diffuse r="0.3" g="0.3" b="0.3" a="1" />
      <specular r="0.3" g="0.3" b="0.3" a="1" />
    </omni>

    <omni id="7" enabled="1">
      <location x="5" y="0" z="0" w="1" />
      <ambient r="0" g="0" b="0" a="1" />
      <diffuse r="0.3" g="0.3" b="0.3" a="1" />
      <specular r="0.3" g="0.3" b="0.3" a="1" />
    </omni>
  </lights>

  <!--Textures-->

  <textures>
    <texture id="simpsons" file="./scenes/images/simpsons.jpg" />
    <texture id="moon" file="./scenes/images/moon.jpg" />
    <texture id="terrain" file="./scenes/images/terrain.jpg" />
    <texture id="terrainmap" file="./scenes/images/terrainmap.jpg" />
    <texture id="water" file="./scenes/images/water.jpg" />
    <texture id="wavemap" file="./scenes/images/wavemap.jpg" />
  </textures>

  <!--Materials-->

  <materials>
    <material id="default" shininess = "1" >
      <emission r="0" g="0" b="0" a="1" />
      <ambient r="0" g="0" b="0" a="1" />
      <diffuse r="1" g="1" b="1" a="1" />
      <specular r="0.1" g="0.1" b="0.1" a="1" />
    </material>
  </materials>

  <!--Transformations-->

  <transformations>
      <transformation id="transformation1">
        <translate x="1" y="0" z="3" />
        <rotate axis="y" angle="10" />
        <scale x="4" y="5" z="2" />
      </transformation>
  </transformations>

  <!--Animations-->
  <animations>

    <linear id="test1" span="2">
      <controlpoint xx="0" yy="0" zz="0"/>
      <controlpoint xx="0" yy="0" zz="2"/>
    </linear>

    <circular id="test2" span="10" center="0 0 0" radius="2" startang="90" rotang="360"/>

    <linear id="test3" span="2">
      <controlpoint xx="2" yy="0" zz="0"/>
      <controlpoint xx="0" yy="2" zz="0"/>
    </linear>

    <linear id="test4" span="2">
      <controlpoint xx="0" yy="2" zz="0"/>
      <controlpoint xx="0" yy="0" zz="0"/>
    </linear>

    <!-- <linear id="test1" span="2">
      <controlpoint xx="0" yy="0" zz="0"/>
      <controlpoint xx="0" yy="2" zz="0"/>
    </linear>

    <circular id="test2" span="5" center="2 2 0" radius="2" startang="180" rotang="360"/>

    <linear id="test3" span="2">
      <controlpoint xx="0" yy="2" zz="0"/>
      <controlpoint xx="0" yy="0" zz="0"/>
    </linear> -->

    <linear id="up" span="10">
      <controlpoint xx="0" yy="0" zz="0"/>
      <controlpoint xx="0" yy="10" zz="0"/>
    </linear>

    <linear id="down" span="10">
      <controlpoint xx="0" yy="10" zz="0"/>
      <controlpoint xx="0" yy="0" zz="0"/>
    </linear>

    <circular id="orbit" span="20" center="10 10 0" radius="10" startang="-180" rotang="360"/>
  </animations>

  <!--Primitives-->

  <primitives>
    <primitive id="patch">
      <patch npointsU="2" npointsV="2" npartsU="10" npartsV="10">
        <controlpoint xx="-0.5" yy="0" zz="0.5"/>
        <controlpoint xx="-0.5" yy="0" zz="-0.5"/>
        <controlpoint xx="0.5" yy="0" zz="0.5"/>
        <controlpoint xx="0.5" yy="0" zz="-0.5"/>
      </patch>
    </primitive>

    <primitive id="plane">
      <plane npartsU="2" npartsV="1" />
    </primitive>

    <primitive id="vehicle">
      <vehicle/>
    </primitive>

    <primitive id="cylinder2">
      <cylinder2 base="0.5" top="0" height="1" slices="20" stacks="20" />
    </primitive>

    <primitive id="terrain">
      <terrain idtexture="terrain" idheightmap="terrainmap" parts="100" heightscale="0.25"/>
    </primitive>

    <primitive id="water">
      <water idtexture="water" idwavemap="wavemap" parts="200" heightscale="0.075" texscale="1"/>
    </primitive>

    <primitive id="moon">
      <sphere radius="3" slices="30" stacks="30" />
    </primitive>

    <primitive id="rectangle">
      <rectangle x1="0" y1="0" x2="1" y2="1" />
    </primitive>
  </primitives >

  <!--Components-->

  <components>

    <!--Root node-->

    <component id="root">
      <transformation>
      </transformation>
      <materials>
        <material id="default" />
      </materials>
      <animations>
        <!-- <animationref id="test1" />
        <animationref id="test2" />
        <animationref id="test3" />
        <animationref id="test4" /> -->
        <!-- <animationref id="test4" /> -->
        <!-- <animationref id="up" />
        <animationref id="orbit" />
        <animationref id="down" /> -->
      </animations>
      <texture id="simpsons" length_s="1" length_t="1" />
      <children>
        <!-- <componentref id="cube" /> -->
        <componentref id="river" />
        <componentref id="terrain" />
        <!-- <primitiveref id="rectangle" /> -->
      </children>
    </component>

    <component id="river">
      <transformation>
        <translate x="0" y="0.75" z="0"/>
        <scale x="10" y="10" z="10"/>
      </transformation>
      <materials>
        <material id="default" />
      </materials>
      <animations>
      </animations>
      <texture id="none" length_s="1" length_t="1" />
      <children>
        <primitiveref id="water" />
      </children>
    </component>

    <component id="terrain">
      <transformation>
        <scale x="10" y="10" z="10"/>
      </transformation>
      <materials>
        <material id="default" />
      </materials>
      <animations>
      </animations>
      <texture id="none" length_s="1" length_t="1" />
      <children>
        <primitiveref id="terrain" />
      </children>
    </component>

    <component id="moon">
      <transformation>
        <translate x="10" y="10" z="0"/>
      </transformation>
      <materials>
        <material id="default" />
      </materials>
      <animations>
      </animations>
      <texture id="simpsons" length_s="1" length_t="1" />
      <children>
        <primitiveref id="moon" />
      </children>
    </component>

    <component id="rocket">
      <transformation>
      </transformation>
      <materials>
        <material id="default" />
      </materials>
      <animations>
        <animationref id="up" />
        <animationref id="orbit" />
        <animationref id="down" />
      </animations>
      <texture id="simpsons" length_s="1" length_t="1" />
      <children>
        <!-- <primitiveref id="vehicle" /> -->
          <primitiveref id="rectangle" />
      </children>
    </component>


  <component id="cube">
    <transformation>
    </transformation>
    <materials>
      <material id="inherit" />
    </materials>
    <animations>
      <!-- <animationref id="animation3" />
      <animationref id="animation1" />
      <animationref id="animation2" /> -->
    </animations>
    <texture id="inherit" length_s="1" length_t="1" />
    <children>
      <componentref id="face1" />
      <componentref id="face2" />
      <componentref id="face3" />
      <componentref id="face4" />
      <componentref id="face5" />
      <componentref id="face6" />
    </children>
  </component>

  <component id="face1">
    <transformation>
      <translate x="-0.5" y="0.5" z="-0.5"/>
      <rotate axis="x" angle="180"/>
    </transformation>
    <materials>
      <material id="inherit" />
    </materials>
    <texture id="inherit" length_s="1" length_t="1" />
    <children>
      <primitiveref id="rectangle" />
    </children>
  </component>

  <component id="face2">
    <transformation>
      <translate x="-0.5" y="-0.5" z="0.5"/>
    </transformation>
    <materials>
      <material id="inherit" />
    </materials>
    <animations>
      <!-- <animationref id="animation2" /> -->
    </animations>
    <texture id="water" length_s="1" length_t="1" />
    <children>
      <primitiveref id="rectangle" />
    </children>
  </component>

  <component id="face3">
    <transformation>
      <translate x="-0.5" y="0.5" z="0.5"/>
      <rotate axis="x" angle="-90"/>
    </transformation>
    <materials>
      <material id="inherit" />
    </materials>
    <texture id="inherit" length_s="1" length_t="1" />
    <children>
      <primitiveref id="rectangle" />
    </children>
  </component>

  <component id="face4">
    <transformation>
      <translate x="-0.5" y="-0.5" z="-0.5"/>
      <rotate axis="x" angle="90"/>
    </transformation>
    <materials>
      <material id="inherit" />
    </materials>
    <texture id="inherit" length_s="1" length_t="1" />
    <children>
      <primitiveref id="rectangle" />
    </children>
  </component>

  <component id="face5">
    <transformation>
      <translate x="-0.5" y="-0.5" z="-0.5"/>
      <rotate axis="y" angle="-90"/>
    </transformation>
    <materials>
      <material id="inherit" />
    </materials>
    <texture id="inherit" length_s="1" length_t="1" />
    <children>
      <primitiveref id="rectangle" />
    </children>
  </component>

  <component id="face6">
    <transformation>
      <translate x="0.5" y="-0.5" z="0.5"/>
      <rotate axis="y" angle="90"/>
    </transformation>
    <materials>
      <material id="inherit" />
    </materials>
    <texture id="inherit" length_s="1" length_t="1" />
    <children>
      <primitiveref id="rectangle" />
    </children>
  </component>
</components>
</yas>

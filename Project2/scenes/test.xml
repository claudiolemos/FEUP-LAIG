<yas>
  <scene root="root" axis_length="5" />

  <!--Views-->
  <views default="living room" >
    <perspective id="living room" near="0.1" far="50" angle="23">
      <from x="3.5" y="7" z="20" />
      <to x="3.5" y="1" z="0" />
    </perspective>
  </views>

  <!--Ambient-->

  <ambient>
    <ambient r="0.2" g="0.2" b="0.2" a="0.2" />
    <background r="0.05" g="0.05" b="0.05" a="1" />
  </ambient>

  <!--Lights-->

  <lights>
    <omni id="1" enabled="1">
      <location x="0" y="5" z="0" w="1" />
      <ambient r="0" g="0" b="0" a="1" />
      <diffuse r="0.3" g="0.3" b="0.3" a="1" />
      <specular r="0.3" g="0.3" b="0.3" a="1" />
    </omni>

    <omni id="2" enabled="1">
      <location x="0" y="5" z="5" w="1" />
      <ambient r="0" g="0" b="0" a="1" />
      <diffuse r="0.3" g="0.3" b="0.3" a="1" />
      <specular r="0.3" g="0.3" b="0.3" a="1" />
    </omni>

    <omni id="3" enabled="1">
      <location x="5" y="5" z="5" w="1" />
      <ambient r="0" g="0" b="0" a="1" />
      <diffuse r="0.3" g="0.3" b="0.3" a="1" />
      <specular r="0.3" g="0.3" b="0.3" a="1" />
    </omni>

    <omni id="4" enabled="1">
      <location x="5" y="5" z="0" w="1" />
      <ambient r="0" g="0" b="0" a="1" />
      <diffuse r="0.3" g="0.3" b="0.3" a="1" />
      <specular r="0.3" g="0.3" b="0.3" a="1" />
    </omni>

    <omni id="5" enabled="1">
      <location x="0" y="0" z="5" w="1" />
      <ambient r="0" g="0" b="0" a="1" />
      <diffuse r="0.3" g="0.3" b="0.3" a="1" />
      <specular r="0.3" g="0.3" b="0.3" a="1" />
    </omni>

    <omni id="6" enabled="1">
      <location x="5" y="0" z="5" w="1" />
      <ambient r="0" g="0" b="0" a="1" />
      <diffuse r="0.3" g="0.3" b="0.3" a="1" />
      <specular r="0.3" g="0.3" b="0.3" a="1" />
    </omni>

    <omni id="7" enabled="1">
      <location x="5" y="0" z="0" w="1" />
      <ambient r="0" g="0" b="0" a="1" />
      <diffuse r="0.3" g="0.3" b="0.3" a="1" />
      <specular r="0.3" g="0.3" b="0.3" a="1" />
    </omni>
  </lights>

  <!--Textures-->

  <textures>
    <texture id="simpsons" file="./scenes/images/simpsons.jpg" />
    <texture id="flanders" file="./scenes/images/flanders.jpg" />
  </textures>

  <!--Materials-->

  <materials>
    <material id="default" shininess = "1" >
      <emission r="0" g="0" b="0" a="1" />
      <ambient r="0" g="0" b="0" a="1" />
      <diffuse r="1" g="1" b="1" a="1" />
      <specular r="0.1" g="0.1" b="0.1" a="1" />
    </material>
  </materials>

  <!--Transformations-->

  <transformations>
      <transformation id="transformation1">
        <translate x="1" y="0" z="3" />
        <rotate axis="y" angle="10" />
        <scale x="4" y="5" z="2" />
      </transformation>
  </transformations>

  <!--Animations-->
  <animations>
    <linear id="animation1" span="5">
      <controlpoint xx="0" yy="0" zz="0"/>
      <controlpoint xx="2" yy="0" zz="0"/>
      <controlpoint xx="2" yy="0" zz="2"/>
      <controlpoint xx="1" yy="0" zz="2"/>
      <controlpoint xx="1" yy="0" zz="1"/>
    </linear>

    <linear id="animation2" span="2.5">
      <controlpoint xx="0" yy="0" zz="0"/>
      <controlpoint xx="0" yy="0" zz="1"/>
    </linear>

    <!-- <circular id="animation3" span="2" center="11 22 33" radius="5" startang="180" rotang="360"/> -->
  </animations>

  <!--Primitives-->

  <primitives>
    <primitive id="patch">
      <patch npointsU="1" npointsV="2" npartsU="3" npartsV="4">
        <controlpoint xx="10" yy="20" zz="30"/>
        <controlpoint xx="40" yy="50" zz="60"/>
      </patch>
    </primitive>

    <primitive id="vehicle">
      <vehicle/>
    </primitive>

    <primitive id="cylinder2">
      <cylinder2 base="0.55" top="0.5" height="1" slices="2" stacks="20" />
    </primitive>

    <primitive id="terrain">
      <terrain idtexture="simpsons" idheightmap="simpsons" parts="1" heightscale="20"/>
    </primitive>

    <primitive id="water">
      <water idtexture="simpsons" idwavemap="simpsons" parts="1" heightscale="10" texscale="20"/>
    </primitive>

    <primitive id="rectangle">
      <rectangle x1="0" y1="0" x2="1" y2="1" />
    </primitive>
  </primitives >

  <!--Components-->

  <components>

    <!--Root node-->

    <component id="root">
      <transformation>
      </transformation>
      <materials>
        <material id="default" />
      </materials>
      <texture id="simpsons" length_s="1" length_t="1" />
      <children>
        <componentref id="cube" />
      </children>
    </component>

  <component id="cube">
    <transformation>
    </transformation>
    <materials>
      <material id="inherit" />
    </materials>
    <animations>
      <animationref id="animation1" />
    </animations>
    <texture id="inherit" length_s="1" length_t="1" />
    <children>
      <componentref id="face1" />
      <componentref id="face2" />
      <componentref id="face3" />
      <componentref id="face4" />
      <componentref id="face5" />
      <componentref id="face6" />
    </children>
  </component>

  <component id="face1">
    <transformation>
      <translate x="0" y="1" z="0"/>
      <rotate axis="x" angle="180"/>
    </transformation>
    <materials>
      <material id="inherit" />
    </materials>
    <texture id="inherit" length_s="1" length_t="1" />
    <children>
      <primitiveref id="rectangle" />
    </children>
  </component>

  <component id="face2">
    <transformation>
      <translate x="0" y="0" z="1"/>
    </transformation>
    <materials>
      <material id="inherit" />
    </materials>
    <animations>
      <animationref id="animation2" />
    </animations>
    <texture id="flanders" length_s="1" length_t="1" />
    <children>
      <primitiveref id="rectangle" />
    </children>
  </component>

  <component id="face3">
    <transformation>
      <translate x="0" y="1" z="1"/>
      <rotate axis="x" angle="-90"/>
    </transformation>
    <materials>
      <material id="inherit" />
    </materials>
    <texture id="inherit" length_s="1" length_t="1" />
    <children>
      <primitiveref id="rectangle" />
    </children>
  </component>

  <component id="face4">
    <transformation>
      <rotate axis="x" angle="90"/>
    </transformation>
    <materials>
      <material id="inherit" />
    </materials>
    <texture id="inherit" length_s="1" length_t="1" />
    <children>
      <primitiveref id="rectangle" />
    </children>
  </component>

  <component id="face5">
    <transformation>
      <rotate axis="y" angle="-90"/>
    </transformation>
    <materials>
      <material id="inherit" />
    </materials>
    <texture id="inherit" length_s="1" length_t="1" />
    <children>
      <primitiveref id="rectangle" />
    </children>
  </component>

  <component id="face6">
    <transformation>
      <translate x="1" y="0" z="1"/>
      <rotate axis="y" angle="90"/>
    </transformation>
    <materials>
      <material id="inherit" />
    </materials>
    <texture id="inherit" length_s="1" length_t="1" />
    <children>
      <primitiveref id="rectangle" />
    </children>
  </component>
</components>
</yas>

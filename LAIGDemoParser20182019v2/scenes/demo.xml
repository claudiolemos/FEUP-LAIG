      </transformation>
      <transformation id="transformation2">
        <rotate axis="z" angle="60" />
        <translate x="3" y="0" z="9" />
        <translate x="5" y="3" z="0" />
        <rotate axis="x" angle="79" />
        <rotate axis="y" angle="20" />
        <scale x="7" y="6" z="3" />
      </transformation>
      <transformation id="transformation3">
        <translate x="5" y="3" z="0" />
        <rotate axis="z" angle="19" />
        <rotate axis="y" angle="38" />
        <scale x="4" y="7" z="6" />
        <rotate axis="z" angle="60" />
        <scale x="6" y="2" z="3" />
      </transformation>
    </transformations>

    <primitives>
    <primitive id="wall">
        <rectangle x1="0" y1="0" x2="7" y2="7" />
    </primitive>
      </primitives >

      <components>

        <component id="root">
            <transformation>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <componentref id="right_wall" />
            </children>
        </component>

        <component id="right_wall">
            <transformation>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="rocks" length_s="1" length_t="1" />

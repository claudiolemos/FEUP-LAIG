<yas>
  <scene root="root" axis_length="1" />

  <views default="perspective1" >
    <perspective id="perspective1" near="0.1" far="50" angle="0.4">
      <from x="10" y="10" z="10" />
      <to x="0" y="0" z="0" />
    </perspective>
    <perspective id="perspective2" near="0.1" far="500" angle="90">
      <from x="1" y="1" z="1" />
      <to x="0" y="0" z="0" />

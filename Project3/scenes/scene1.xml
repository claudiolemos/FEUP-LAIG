<yas>
  <scene root="root" axis_length="5" />

  <!--Views-->
  <views default="default" >
    <perspective id="default" near="0.1" far="500" angle="23">
      <from x="15" y="10" z="15" />
      <to x="0" y="1" z="0" />
    </perspective>
  </views>

  <!--Ambient-->

  <ambient>
    <ambient r="0.2" g="0.2" b="0.2" a="0.2" />
    <background r="0.0" g="0.0" b="0.0" a="1" />
  </ambient>

  <!--Lights-->

  <lights>
    <omni id="1" enabled="1">
      <location x="0" y="5" z="0" w="1" />
      <ambient r="0" g="0" b="0" a="1" />
      <diffuse r="0.3" g="0.3" b="0.3" a="1" />
      <specular r="0.3" g="0.3" b="0.3" a="1" />
    </omni>

    <omni id="2" enabled="1">
      <location x="5" y="0" z="0" w="1" />
      <ambient r="0" g="0" b="0" a="1" />
      <diffuse r="0.3" g="0.3" b="0.3" a="1" />
      <specular r="0.3" g="0.3" b="0.3" a="1" />
    </omni>

    <omni id="3" enabled="1">
      <location x="0" y="0" z="5" w="1" />
      <ambient r="0" g="0" b="0" a="1" />
      <diffuse r="0.3" g="0.3" b="0.3" a="1" />
      <specular r="0.3" g="0.3" b="0.3" a="1" />
    </omni>
  </lights>

  <!--Textures-->

  <textures>
    <texture id="texture" file="./scenes/images/texture.jpg" />
  </textures>

  <!--Materials-->

  <materials>
    <material id="default" shininess = "1" >
      <emission r="0" g="0" b="0" a="1" />
      <ambient r="0" g="0" b="0" a="1" />
      <diffuse r="1" g="1" b="1" a="1" />
      <specular r="0.1" g="0.1" b="0.1" a="1" />
    </material>
  </materials>

  <!--Transformations-->

  <transformations>
      <transformation id="transformation1">
        <translate x="1" y="1" z="3" />
        <rotate axis="z" angle="90" />
        <scale x="1" y="1" z="1" />
      </transformation>
  </transformations>

  <!--Animations-->
  <animations>

    <linear id="linear" span="5">
      <controlpoint xx="0" yy="0" zz="0"/>
      <controlpoint xx="1" yy="0" zz="0"/>
    </linear>

    <circular id="circular" span="5" center="0 0 0" radius="0" startang="0" rotang="360"/>
  </animations>

  <!--Primitives-->

  <primitives>
    <primitive id="plane">
      <plane npartsU="1" npartsV="1" />
    </primitive>

    <primitive id="sphere">
      <sphere radius="2" slices="30" stacks="30" />
    </primitive>

    <primitive id="cylinder2">
      <cylinder2 base="0.085" top="0.085" height="1.5" slices="10" stacks="1" />
    </primitive>

    <primitive id="patch">
      <patch npointsU="2" npointsV="2" npartsU="10" npartsV="10">
        <controlpoint xx="0" yy="0" zz="0"/>
        <controlpoint xx="-0.75" yy="0" zz="-0.75"/>
        <controlpoint xx="1.5" yy="0" zz="0"/>
        <controlpoint xx="2.25" yy="0" zz="-0.75"/>
      </patch>
    </primitive>

  </primitives >

  <!--Components-->

  <components>

    <!--Root node-->

    <component id="root">
      <transformation>
      </transformation>
      <materials>
        <material id="default" />
      </materials>
      <animations>
      </animations>
      <texture id="texture" length_s="1" length_t="1" />
      <children>
        <primitiveref id="plane" />
      </children>
    </component>

  </components>
</yas>

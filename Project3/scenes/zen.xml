<yas>
  <scene root="root" axis_length="5" />

  <!--Views-->
  <views default="neutral" >
    <perspective id="neutral" near="0.1" far="500" angle="23">
      <from x="2.5" y="20" z="2.5" />
      <to x="3.5" y="0" z="2.5" />
    </perspective>
    <perspective id="player1" near="0.1" far="500" angle="23">
      <from x="-10" y="13" z="-10" />
      <to x="3.5" y="3" z="2.5" />
    </perspective>
    <perspective id="player2" near="0.1" far="500" angle="23">
      <from x="10" y="15" z="10" />
      <to x="3.5" y="0" z="2.5" />
    </perspective>
  </views>

  <!--Ambient-->

  <ambient>
    <ambient r="0.2" g="0.2" b="0.2" a="0.2" />
    <background r="0.05" g="0.05" b="0.05" a="1" />
  </ambient>

  <!--Lights-->

  <lights>
    <omni id="living room 1" enabled="1">
      <location x="3.5" y="3" z="2.5" w="1" />
      <ambient r="0" g="0" b="0" a="1" />
      <diffuse r="1" g="1" b="1" a="1" />
      <specular r="0.5" g="0.5" b="0.5" a="1" />
    </omni>
  </lights>

  <!--Textures-->

  <textures>
    <texture id="wood" file="./images/wood.jpg" />
  </textures>

  <!--Materials-->

  <materials>
    <material id="default" shininess = "1" >
      <emission r="0" g="0" b="0" a="1" />
      <ambient r="0" g="0" b="0" a="1" />
      <diffuse r="1" g="1" b="1" a="1" />
      <specular r="0.1" g="0.1" b="0.1" a="1" />
    </material>
  </materials>

  <!--Transformations-->

  <transformations>
    <transformation id="transformation">
      <translate x="1" y="0" z="3" />
      <rotate axis="y" angle="10" />
      <scale x="4" y="5" z="2" />
    </transformation>
  </transformations>

  <!--Animations-->

  <animations>
  </animations>

  <!--Primitives-->

  <primitives>

    <primitive id="hawalis">
      <hawalis/>
    </primitive>

    <primitive id="moon">
      <sphere radius="6" slices="30" stacks="30" />
    </primitive>

  </primitives>

  <!--Components-->

  <components>

    <!--Root node-->

    <component id="root">
      <transformation>
      </transformation>
      <materials>
        <material id="default" />
      </materials>
      <texture id="wood" length_s="1" length_t="1"/>
      <children>
        <primitiveref id="hawalis"/>
        <primitiveref id="moon"/>
      </children>
    </component>

  </components>
</yas>
